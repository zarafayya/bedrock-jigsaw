{
  "$schema": "https://raw.githubusercontent.com/ink0rr/rgl-schemas/main/config/v1.0.json",
  "author": "Your name",
  "name": "bedrock-jigsaw",
  "packs": {
    "behaviorPack": "./packs/BP",
    "resourcePack": "./packs/RP"
  },
  "regolith": {
    "dataPath": "./data",
    "filterDefinitions": {
      "esbuild": {
        "url": "github.com/ink0rr/regolith-filters",
        "version": "0.2.0"
      }
    },
    "profiles": {
      "default": {
        "export": {
          "target": "development"
        },
        "filters": [
          {
            "filter": "esbuild",
            "settings": {
              "entryPoints": [
                "data/main.ts"
              ],
              "minify": false
            }
          }
        ]
      },
      "marketing_release": {
        "export": {
          "target": "development"
        },
        "filters": [
          {
            "filter": "esbuild",
            "settings": {
              "entryPoints": [
                "data/main.ts"
              ],
              "minify": false
            }
          }
        ]
      },
      "build": {
        "export": {
          "target": "local"
        },
        "filters": [
          {
            "profile": "default"
          }
        ]
      }
    }
  }
}
